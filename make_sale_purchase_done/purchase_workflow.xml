<?xml version="1.0" ?>
<openerp>
    <data>
        <record id="purchase.trans_picking_except_picking" model="workflow.transition">
            <field name="act_from" ref="purchase.act_picking"/>
            <field name="act_to" ref="purchase.act_except_invoice"/>
            <field name="signal">subflow.cancel</field>
            <field name="condition">not is_done_do()</field>
        </record>
        
        <record id="trans_picking_done_cancel" model="workflow.transition">
            <field name="act_from" ref="purchase.act_picking"/>
            <field name="act_to" ref="purchase.act_picking_done"/>
            <field name="signal">subflow.cancel</field>
            <field name="condition">is_done_do()</field>
        </record>
    </data>
</openerp>
