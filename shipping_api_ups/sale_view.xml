<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
	  	<record model="ir.ui.view" id="sale_order_form_ups">
			<field name="name">sale.order.view_form.ups</field>
			<field name="model">sale.order</field>
			<field name="inherit_id" ref="sale.view_order_form"/>
			<field name="priority" eval="30" />
			<field name="arch" type="xml">
				<field name="ship_method" position="after"> <field name="ups_service_id" ></field></field>
				<xpath expr="//page[@string='Other Information']" position="inside">
					<newline/>
					<group colspan="4" col="4" attrs="{'invisible':[('ship_company_code','!=','ups')]}" >
						<separator colspan="2" string="UPS"/>
						<newline/>
						<field name="ups_shipper_id" on_change="onchage_service(ups_shipper_id)"/>

						<field name="ups_pickup_type"/>
						<field name="ups_packaging_type" widget="selection"/>
					</group>
				</xpath>
				
				<xpath expr="//form/sheet/notebook/page/group[@name='sale_total']" position="after">
					
					<group colspan="6" col="6" string="Shipping Estimates"> 
					<field name='shipping_rates' widget="one2many_list" nolabel='1'>
					<tree string="Shipping Rates" editable='bottom'>
						<button string="Select Ship Method" name="select_ship_method" type="object" icon="terp-camera_test"/>
	                  
						<field name="service"/>
						<field name="ratedshipmentwarning"/>
						<field name="daystodelivery"/>
						<field name="totalcharges"/>
					</tree>
					
					</field>
					</group>
					
				</xpath>
				
			</field>
		</record> 
		
		<record id="tree_view_for_ups_shipping_rates" model="ir.ui.view">
			<field name="name">tree_view_for_ups_shipping_rates</field>
			<field name="res_model">shipping.rates.sales</field>
			<field name="model">shipping.rates.sales</field>
			<field name="arch" type="xml">
				<tree string="Shipping Rates">
					<field name="service"/>
					<field name="ratedshipmentwarning"/>
					<field name="daystodelivery"/>
					<field name="totalcharges"/>
				</tree>
			</field>
		</record>
	</data>
</openerp>
