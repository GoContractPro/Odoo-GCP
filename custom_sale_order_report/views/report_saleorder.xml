<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
<template id="custom_report_saleorder_document">

        <div class="header">
        	<div class="oe_structure"/>
            <div class="row" style="font-size: 12pt">
	            <div class="col-xs-6" >
	             	
	                 <div t-field="o.company_id.logo"
	                 	t-field-options='{"widget": "image"}'/>
	                 <div t-field="o.company_id.partner_id"
	                     t-field-options='{"widget": "contact", "fields": ["address"], "no_marker": true}' />                 	                     
	            </div>
	         
	        	<div class="col-xs-5 col-xs-offset-1" > 
	        		
	             	<h1>
	             		<span style="color:#D3D3D3; font-weight: 900">
		                <span t-if="o.state not in ['draft','sent']">Sales Order</span>
		                <span t-if="o.state in ['draft','sent']">Sales Quotation</span>
		                </span>
	            	</h1>
	            	
				<table>
					<tr t-if="o.date_order" >
	                	<td>
		                    <strong>Ordered Number: </strong>
	                    </td>
	                    <td>  
	                    	<span t-field="o.name"/> 
	                    </td>
	                </tr>
	                <tr t-if="o.date_order" >
	                	<td>
		                    <strong t-if="o.state not in ['draft','sent']">Date Ordered: </strong>
		                    <strong t-if="o.state in ['draft','sent']">Quotation Date: </strong>
	                    </td>
	                    <td>  
	                    	<span t-field="o.date_order" />
	                    </td>
	                   
	                </tr>
	
	             </table>
	           	</div>
	         </div>
	         </div> 
	         
        	<div class="page">
			<div class="row">
				<p> </p>
				<div class="col-xs-5 pull-left">
                <table  class="table table-condensed" style="border: 1px solid black">
                	<tbody>
                		
                		<tr style= "background-color: lightgrey; font-weight: bold">
                			<td style="border: 1px solid black">Sold To:</td>
                		</tr>
                		<tr> 
                			<td style="border: 1px solid black">
                				<span t-field="o.partner_id"
	                        	t-field-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}' />
	                        </td>
                        </tr>
                    </tbody>
                </table>
               </div>
                
               <div class="col-xs-5 pull-right">
                <table  class="table table-condensed"  style="border: 1px solid black">
                	<tbody>
                		
                        <tr style= "background-color: lightgrey; font-weight: bold">
                			<td style="border: 1px solid black">Ship To:</td>
                		</tr>
                		<tr>
                        	<td style="border: 1px solid black"> 
                        		<span t-field="o.partner_shipping_id" 
                            	t-field-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}'/>
                        		<p t-if="o.partner_id.vat">VAT: <span t-field="o.partner_id.vat"/></p>
                        	</td>
                		</tr>
                	</tbody>
               	</table>
            	</div> 
            </div>
              
			
            <table class="table table-condensed" style="border: 1px solid black"  >
              <tbody>
               <tr style="background-color: lightgrey; font-weight: bold">
                   <td style="border: 1px solid black">Customer</td>
                   <td style="border: 1px solid black">P.O. Number</td>
                   <td style="border: 1px solid black">Sales Rep Name</td>
              </tr>             
              <tr>
              	<td style="border: 1px solid black"><span t-field="o.partner_id.name"/></td>
              	<td style="border: 1px solid black"><span t-field="o.client_order_ref"/></td>
              	<td style="border: 1px solid black"><span t-field="o.user_id.name"/></td>
              </tr>
              
              <tr style= "background-color: lightgrey; font-weight: bold" >
                <td style="border: 1px solid black">Customer Contact</td>
                <td style="border: 1px solid black">Shipping Method</td>
                <td style="border: 1px solid black">Payment Terms</td>
              </tr>
            
              <tr>
              	<td style="border: 1px solid black"><span t-field="o.partner_shipping_id.name"/></td>
              	<td style="border: 1px solid black"><span t-field="o.delivery_method.name"/></td>
              	<td style="border: 1px solid black"><span t-field="o.payment_term.name"/></td>
              </tr>
              
              </tbody>
               
           	</table>
			
            <table style="border: 1px solid black" class="table table-condensed">
                <thead>
                    <tr style= "background-color: lightgrey">
                        <th>Description</th>
                        <th>Taxes</th>
                        <th class="text-right">Quantity</th>
                        <th class="text-right">Unit Price</th>
                        <th groups="sale.group_discount_per_so_line">Disc.(%)</th>
                        <th class="text-right">Price</th>
                    </tr>
               </thead>
               <tbody class="sale_tbody">
                    <tr t-foreach="o.order_line" t-as="l">
                        <td>
                           <span t-field="l.name"/>
                        </td>
                        <td>
                            <span t-esc="', '.join(map(lambda x: x.name, l.tax_id))"/>
                        </td>
                        <td class="text-right">
                            <span t-field="l.product_uom_qty"/>
                            <span groups="product.group_uom" t-field="l.product_uom"/>
                        </td>
                        <td class="text-right">
                            <span t-field="l.price_unit"/>
                        </td>
                        <td groups="sale.group_discount_per_so_line">
                            <span t-field="l.discount"/>
                        </td>
                        <td class="text-right">
                            <span t-field="l.price_subtotal"
                                t-field-options='{"widget": "monetary", "display_currency": "o.pricelist_id.currency_id"}'/>
                        </td>
                    </tr>
                </tbody>
            </table>

            <div class="row">
                <div class="col-xs-4 pull-right">
                    <table class="table table-condensed" style="border: 1px solid black">
                        <tr class="border-black">
                            <td><strong>Total Without Taxes</strong></td>
                            <td class="text-right">
                                <span t-field="o.amount_untaxed"
                                    t-field-options='{"widget": "monetary", "display_currency": "o.pricelist_id.currency_id"}'/>
                            </td>
                        </tr>
                        <tr>
                            <td><strong>Taxes</strong></td>
                            <td class="text-right">
                                <span t-field="o.amount_tax"
                                    t-field-options='{"widget": "monetary", "display_currency": "o.pricelist_id.currency_id"}'/>
                            </td>
                        </tr>
                        <tr class="border-black" style= "background-color: lightgrey">
                            <td><strong>Total</strong></td>
                            <td class="text-right">
                                <span t-field="o.amount_total"
                                    t-field-options='{"widget": "monetary", "display_currency": "o.pricelist_id.currency_id"}'/>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>

            <p t-field="o.note" />
            <p t-if="o.payment_term.note">
                <strong>Payment Term:</strong>
                <span t-field="o.payment_term.note"/>
            </p>
            <div class="oe_structure"/>
        </div>
        <div class="footer">
        
        	<div class="row text-center">
        		
        		<p><strong>
	        		Phone: <span t-field="o.company_id.partner_id.phone"/>
	        		Fax: <span t-field="o.company_id.partner_id.fax"/>
		        	Email: <span t-field="o.company_id.partner_id.email"/>
	        	</strong></p>
	        	
        	</div>
        </div>
    
</template>

<template id="custom_report_saleorder">
    <t t-call="report.html_container">
        <t t-foreach="doc_ids" t-as="doc_id">
            <t t-raw="translate_doc(doc_id, doc_model, 'partner_id.lang', 'custom_sale_order_report.custom_report_saleorder_document')"/>
        </t>
    </t>
</template>
</data>
</openerp>
