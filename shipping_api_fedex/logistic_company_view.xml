<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>

		<record id="logistic_company_form_fedex" model="ir.ui.view">
			<field name="name">logistic_company_form_fedex</field>
			<field name="model">logistic.company</field>
			<field name="type">form</field>
			<field name="inherit_id" ref="shipping_api.view_form_logistic_company" />
			<field name="arch" type="xml">
				<xpath expr="//page[@string='Notes']" position="before">
					<page string="Fedex" attrs="{'invisible':[('ship_company_code','!=','fedex')]}" >
						<group colspan='4' col='4'>
						<!-- field name="ups_shipping_account_ids" nolabel='1' colspan="4"/ -->
						
						<field name='fedex_account_id'  on_change="onchange_fedex_account(fedex_account_id)"  attrs="{'required':[('ship_company_code','=','fedex')]}"  />
						<field name='fedex_key'  readonly="1" attrs="{'required':[('ship_company_code','=','fedex')]}"/>
						<field name='fedex_password' readonly="1" password="True" attrs="{'required':[('ship_company_code','=','fedex')]}"/>
						<field name='fedex_account_number' readonly="1" attrs="{'required':[('ship_company_code','=','fedex')]}"/>
						<field name='fedex_meter_number' readonly="1" attrs="{'required':[('ship_company_code','=','fedex')]}"/>
						</group>
					</page>
				</xpath>
			</field>
		</record>

	</data>
</openerp>
    