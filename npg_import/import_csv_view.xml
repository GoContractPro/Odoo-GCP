<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="npg_view_import_csv_form" model="ir.ui.view">
            <field name="name">import.csv.form</field>
            <field name="model">import.csv</field>
            <field name="arch" type="xml">
                <form string="Read CSV" version="7.0">
                    <group col="4">
                    	<field name="name"/>
                        <field name="browse_path" />
                        <field name="start_time"/>
                    	<field name="end_time"/>
                    	<field name="model_id"/>
                    </group>
                    
                    <newline/>
                    
                    <group col="8">
                    	<button name='action_get_headers_csv' string="Get CSV Headers" context="{'model':model_id}" type="object" class="oe_highlight"/>
                    	 <field name='do_update' />
                         <field name="test_sample_size" />
                         <button name="action_import_csv" string="Test" type="object" clase="oe_highlight" context="{'test':True}"/>
                         <newline/>
                         <button name="action_import_csv" string="Import" type="object" class="oe_highlight"/>
                   </group>
                      	<field name="header_csv_ids" context="{'model':model_id}"> 
	                    	<tree create="false" editable="bottom">
	                    		<field name="name"/>
	                    		<field name="is_unique"/>
	                    		<field name="create"/>
	                    	 	<field name="model" required="1" readonly="1"/>
	                    		<field name="model_field" required="1" domain="[('model_id','=',model),('ttype','not in',['one2many','many2many'])]"/>
	                    		<field name="search"/>
	                    	</tree> 
	                    	
						</field>
                    <group>

                    	<field name="error_log"/>  
                    </group>
                    

                </form>
            </field>
        </record>
        
        <record id="view_import_csv_tree" model="ir.ui.view">
            <field name="name">import.csv.tree</field>
            <field name="model">import.csv</field>
            <field name="arch" type="xml">
                <tree string="Read CSV" version="7.0">
                    	<field name="name"/>
                        <field name="browse_path" />
                 </tree>
            </field>
        </record>

        <record id="action_import_csv" model="ir.actions.act_window">
            <field name="name">Import CSV</field>
            <field name="res_model">import.csv</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_import_csv_tree" />
        </record> 

        <menuitem action="action_import_csv" id="menu_import_csv" parent="base.menu_config"/>

    </data>
</openerp>