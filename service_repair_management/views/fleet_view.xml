<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
       <record id="service_repair_fleet_vehicle_form_inherit" model="ir.ui.view">
			<field name="name">fleet.vehicle.inherit.form</field>
			<field name="model">fleet.vehicle</field>
			<field name="inherit_id" ref="fleet.fleet_vehicle_form" />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='vin_sn']" position="after">
					<field name="unit"/>
					<field name="make"/>
					<field name="model"/>
				</xpath>
				<xpath expr="//field[@name='driver_id']" position="replace">
					<field name="driver_id" string="Customer"/>
				</xpath>
				<xpath expr="//field[@name='license_plate']" position="replace">
					<field name="license_plate" required="0"/>
				</xpath>
			</field>
		</record>
		<record id="service_repair_fleet_vehicle_search_inherit" model="ir.ui.view">
			<field name="name">fleet.vehicle.inherit.form</field>
			<field name="model">fleet.vehicle</field>
			<field name="inherit_id" ref="fleet.fleet_vehicle_search" />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='driver_id']" position="after">
					<field name="unit"/>
					<field name="make"/>
					<field name="model"/>
				</xpath>
			</field>
		</record>
    </data>
</openerp>
